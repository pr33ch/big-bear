server {
    root /usr/src/projects/bigbear;
    listen 80;
    handler static {
        location /static;
        root static_files/some_files;
    }
    handler static {
        location /fun;
        root static_files/more_files;
    }
    handler echo {
        location /echo;
    }
    handler status {
        location /status;
    }
    handler error {
        location /;
    }

    handler proxy {
        location /rubberducks;
        dest www.rubberducks.cs130.org;
    }

    handler proxy {
        location /ucla;
        dest www.ucla.edu;
    }

    handler proxy {
        location /moved_echo;
        dest 127.0.0.1/redirect/;
    }

    handler redirect {
        location /redirect;
        dest 127.0.0.1/echo;
    }
}
